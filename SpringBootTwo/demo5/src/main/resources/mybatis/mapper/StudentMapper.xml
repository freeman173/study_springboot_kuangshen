<?xml version="1.0" encoding="UTF8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo5.mapper.StudentMapper">



<!--
从学生、教师表的信息中查询到相关字段并将其映射为学生对象:
    先用sql语句查询到对应字段；
    再使用resultmap对象做映射。

-->

    <select id="selectStudents" resultMap="StudentTeacher">
        select s.id sid,s.name sname,t.id tid,t.name tname
        from student2 s inner join teacher t on s.tid=t.id
    </select>

    <resultMap id="StudentTeacher" type="student">
<!--      pojo属性字段与sql语句查询的字段一一对应  -->
        <result property="id" column="sid"/>
        <result property="name" column="sname"/>
        <!--     关联（association）元素处理“有一个”类型的关系。
            association，关联属性（一个对象）
            javatype:与 association标签搭配使用，指定实体类的属性类型
          -->
        <association property="teacher" javaType="teacher">
            <result property="id" column="tid"/>
            <result property="name" column="tname"/>
        </association>

    </resultMap>













</mapper>
